root { 
    display: block;
}
/*pagina index*/
.body {
     background-color:#06C;
}

#paginaIndex{background-color:#06C;}
a:link {text-decoration: none;color: #333333}
a:active {text-decoration: none;}
a:visited {text-decoration: none;color: #333333}
a:hover {text-decoration:none;color: #FFF}

#bar_h{background-color:#FFF;position:absolute;width:100%;height:85px;left:0%;top:0;}
.bar_h_:hover{text-shadow:#FFF; }
tr{height:26px;}

#center{
	background-color:#FFF;
	position: absolute;
	width: 80%;
	left: 10%;
	height: 500px;
	top: 140px;
	bottom: 20%;
}
#p_principal{
	background-color:#333;
	position:absolute;
	width:55%;
	height:95%;
	left:1%;
	top:2%;
}
/*fim pagina index*/
/*Inicio contato*/
#contato{
	background-color:#333;
	position:absolute;
	width:48%;
	height:95%;
	left:1%;
	top:2%;
	display: table;
	overflow: hidden;
}
#contato input, select{
	background-color:#f2f2f2;
    border:1px solid #f2f2f2;
    padding:8px;
	float: left;
	border-radius:10px;
}
#submit_contato{cursor:pointer;}
#reset_contato{cursor:pointer;}
.t_contato{position:absolute; left:3%; top:1px;}

p{
    font-family:Arial, Helvetica, sans-serif;
    font-size:14px;
    color:#F60;
    font-weight:bold;
}
.align_contato{margin:5x 1px 1px 1px;}
#redes_sociais{position:absolute; left:50%; top:10px; width:50%; height:95%; background-image:url(../img/back_contato.png); background-repeat:repeat-y;}
/*FIM CONTATO*/
/*PAGINA PASSAGENS*/
#show_passagens{position: absolute;left: 3%; top: 20px; width: 95%; height: 300px; background-color:#1B1B1B;}
#td_passagem{background-image: url(../img/bar_h.jpg);}
/*fim pagina passagens*/
/*PROMOCOES*/
.img_promo{width: 350px}
#email_news{display: block;}
#text_rama{left:10%;}
.text_rama{width: 80%;left:10%;}
#img_logo{
	position: absolute;
	width: 291px;
	top: 7%;
	left: 74%;
	opacity: 10%;
	height: 149px;
}
